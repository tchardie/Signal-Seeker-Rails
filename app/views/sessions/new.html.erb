<div class="section">
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      
      <% if flash[:alert] %>
      	<p id="notice"><%= flash[:alert] %></p>
      <% end %>
  	  <br />
      <div>
        <label for="name">Name</label>:<br />
        <%= text_field_tag :name, params[:name] %>
      </div>
	  <br />
      <div>
        <label for="password">Password</label>:<br />
        <%= password_field_tag :password, params[:password] %>
      </div>
      <br />
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>