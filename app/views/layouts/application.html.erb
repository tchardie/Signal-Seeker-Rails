<!DOCTYPE html>
<html>
	<head>
		<title>SignalSeeker</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		<%= yield :head %>
	</head>
	<body>
		<div id="banner">
			<%= image_tag("missile.gif") %>
			<p>
				Signal Seeker
			</p>
		</div>
			<div id="Sidebar">
				<%= link_to 'Home', home_path() %>
				<br />
				<%= link_to 'Enter Data', :controller => "data", :action => "new" %>
				<br />
				<% if session[:user_id].nil? %>
					<%= link_to "Login", login_path %><br />
				<% end %>
				<% if session[:user_id] %>
					<%= link_to 'Data', data_path %><br />
					<%= link_to 'Users', users_path %><br />
					<%= button_to 'Logout', logout_path, :method => :delete %>
				<% end %>
			</div>
			<div id="main">
				<%= yield %>
				<%= yield :scripts %>
			</div>
		<div id="banner">
			<p>
				<%= @time%>
			</p>
		</div>
	</body>
</html>
